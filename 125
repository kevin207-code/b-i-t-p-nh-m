#include <iostream>
using namespace std;
const int kt = 100;
void tongtungdong(double A[][kt], int&, int&);

int main()
{
	double A[kt][kt];
	int tong = 0;
	int n, m;
	cout << "Nhap so dong: ";
	cin >> n;
	cout << "Nhap so cot: ";
	cin >> m;
	cout << "Nhap cac phan tu cua ma tran: " << endl;
	for (int i = 0; i < n; i++)
	{
		for (int j = 0; j < m; j++)
		{
			cout << "A[" << i << "][" << j << "] = ";
			cin >> A[i][j];
		}
	}
	tongtungdong(A, n, m);
	return 0;
}


void tongtungdong(double A[][kt], int& n, int& m)
{
	for (int i = 0; i < n; i++)
	{
		double tong = 0;
		for (int j = 0; j < m; j++)
		{
			tong += A[i][j];
		}
		cout << "Tong dong " << i + 1 << " la: " << tong << endl;
	}
}
